@model KampusLearn.Models.Course;


<form  asp-action="UpdateCourse" method="post">
    <input type="hidden" asp-for=CourseId />
<div class="form-group w-50">
    <label  >Course Name</label>
    <input asp-for=CourseName class="form-control" id="txtCourseName">
  </div>
  <div class="form-group w-50">
    <label >Technology</label>
    <input asp-for=Technology  class="form-control" id="txtTechnology">
  </div>
  <div class="form-group w-50">
    <label>Duration</label>
    <input asp-for=Duration  class="form-control" id="txtDuration">
  </div>
  
  <input type="submit" class="btn btn-primary" value="Update Course"/>
  </form>